{
  "quoteProps": "consistent",
  "trailingComma": "es5",

  "singleQuote": true,
  "jsxSingleQuote": true,

  "semi": false,

  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-css-order"
  ],
  "importOrder": [
    "^react",
    "^next",
    "<THIRD_PARTY_MODULES>",
    "^@/components",
    "^@/constants",
    "^public",
    ".css$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
